        <div class="playlist-list-container">
            <ul class="playlist-list">
                <% data.json.forEach(function callback(element, index) { %>
                    <li class="playlist-list-item<%=index%>" onclick="handleListClick( <%= index %> )"><%= element.name %> </li>
